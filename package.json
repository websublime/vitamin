  "description": "Vitamin components",
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "keywords": ["components", "vue", "ui", "lib"],
  "license": "MIT",
  "name": "@vitamin/sdk",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/websublime/vitamin"
  },
  "scripts": {
    "bootstrap": "yarn --frozen-lockfile && lerna bootstrap",
    "build:lib": "lerna run build --parallel --scope @vitamin/ui",
    "build:lib:watch": "lerna run build:watch --parallel --scope @vitamin/ui",
    "build:watch": "lerna run build:watch --parallel --scope=@vitamin/{ui,playground}",
    "lint:vitamin": "lerna run lint --parallel --scope=@vitamin/{ui,playground}",
    "postinstall": "yarn build:lib",
    "start": "yarn build:watch"
  },
  "version": "1.0.0",
  "workspaces": ["packages/*"]
}

{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "files": {
    "ignore": ["dist/**/*.js", "dist/**/*.mjs"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
      "style": {
        "useBlockStatements": {
          "level": "error",
          "options": {}
        }
      },
      "nursery": {
        "noConsoleLog": {
          "level": "error",
          "options": {}
        },
        "noDuplicateJsonKeys": {
          "level": "error",
          "options": {}
        },
        "noGlobalIsNan": {
          "level": "error",
          "options": {}
        },
        "useGroupedTypeImport": {
          "level": "warn",
          "options": {}
        },
        "useNamingConvention": {
          "level": "warn",
          "options": {}
        }
      }
		}
	}
}

{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "removeComments": true,
    "rootDir": "./src",
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx"
  ],
  "extends": "../../tsconfig.base.json",
  "references": [],
  "exclude": [
    "dist"
  ]
}
